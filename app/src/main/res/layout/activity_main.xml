<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">

    <android.support.v7.widget.CardView
        android:id="@+id/parent_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp">

        <com.app.jobfizzerxp.utilities.customLibraries.NavigationTabStrip
            android:id="@+id/tabStrip"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            app:nts_active_color="@color/text_colour"
            app:nts_animation_duration="300"
            app:nts_color="?colorPrimary"
            app:nts_corners_radius="1.5dp"
            app:nts_factor="2.5"
            app:nts_gravity="bottom"
            app:nts_inactive_color="@color/text_colour_light"
            app:nts_size="@dimen/normal_text"
            app:nts_typeface="@string/font_medium"
            app:nts_weight="3dp" />
    </android.support.v7.widget.CardView>

    <android.support.v4.view.ViewPager
        android:id="@+id/mainPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/parent_card"
        android:background="@color/light_grey" />
</RelativeLayout>